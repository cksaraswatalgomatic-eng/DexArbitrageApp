{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
        "rules": {
          "indent": [
            "error",
            2
          ],
          "linebreak-style": "off",
          "quotes": [
            "error",
            "single"
          ],
          "semi": [
            "error",
            "always"
          ],
          "no-unused-vars": "off",
          "no-undef": "off",
          "no-empty": "off",
          "no-useless-escape": "off"
        }}